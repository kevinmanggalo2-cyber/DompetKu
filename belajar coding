                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="sendForm">
                        <div class="mb-3">
                            <label class="form-label">ID Penerima</label>
                            <input type="text" class="form-control" id="sendRecipient" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Jumlah (Rp)</label>
                            <input type="number" class="form-control" id="sendAmount" required min="1000">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Catatan</label>
                            <input type="text" class="form-control" id="sendNote">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Kirim Sekarang</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Modal Minta -->
    <div class="modal fade" id="requestModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Minta Uang</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="requestForm">
                        <div class="mb-3">
                            <label class="form-label">ID Pemberi</label>
                            <input type="text" class="form-control" id="requestSender" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Jumlah (Rp)</label>
                            <input type="number" class="form-control" id="requestAmount" required min="1000">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Catatan</label>
