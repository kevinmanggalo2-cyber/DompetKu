    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Initialize App
        let balance = 0;
        let transactions = [];
        let userId = '';
        
        // Generate User ID
        function generateUserId() {
            return 'USER' + Math.random().toString(36).substr(2, 9).toUpperCase();
        }
        
        // Load Data from localStorage
        function loadData() {
            const savedBalance = localStorage.getItem('dompetku_balance');
            const savedTransactions = localStorage.getItem('dompetku_transactions');
            const savedUserId = localStorage.getItem('dompetku_userId');
            
            if (savedBalance) balance = parseFloat(savedBalance);
            if (savedTransactions) transactions = JSON.parse(savedTransactions);
            if (savedUserId) {
                userId = savedUserId;
            } else {
                userId = generateUserId();
                localStorage.setItem('dompetku_userId', userId);
            }
            
            updateBalance();
            displayTransactions();
            generateQRCode();
        }
        
        // Save Data to localStorage
        function saveData() {
            localStorage.setItem('dompetku_balance', balance.toString());
            localStorage.setItem('dompetku_transactions', JSON.stringify(transactions));
        }
        
        // Update Balance Display
        function updateBalance() {
            const balanceEl = document.getElementById('balance');
            balanceEl.textContent = formatCurrency(balance);
            
            // Animate balance
            anime({
                targets: '#balance',
                scale: [1.1, 1],
                duration: 500,
                easing: 'easeOutElastic(1, .5)'
            });
        }
        
        // Format Currency
        function formatCurrency(amount) {
            return 'Rp ' + amount.toLocaleString('id-ID');
        }
        
        // Add Transaction
        function addTransaction(type, amount, description, recipient = '') {
            const transaction = {
                id: Date.now(),
                type: type,
                amount: amount,
                description: description,
                recipient: recipient,
                date: new Date().toLocaleString('id-ID')
            };
            
            transactions.unshift(transaction);
            saveData();
            displayTransactions();
        }
        
        // Display Transactions
        function displayTransactions() {
            const listEl = document.getElementById('transactionsList');
            
            if (transactions.length === 0) {
                listEl.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-receipt"></i>
                        <p>Belum ada transaksi</p>
                    </div>
                `;
                return;
            }
            
            listEl.innerHTML = transactions.map(t => `
                <div class="transaction-item fade-in">
                    <div class="transaction-info">
                        <div class="transaction-type">${t.type}</div>
                        <div class="transaction-date">${t.date}</div>
                        ${t.description ? `<small class="text-muted">${t.description}</small>` : ''}
                        ${t.recipient ? `<small class="text-muted d-block">Ke: ${t.recipient}</small>` : ''}
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="transaction-amount ${t.amount > 0 ? 'amount-positive' : 'amount-negative'}">
                            ${t.amount > 0 ? '+' : ''}${formatCurrency(Math.abs(t.amount))}
                        </div>
                        <button class="delete-btn" onclick="deleteTransaction(${t.id})">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            `).join('');
            
            // Animate transaction items
            anime({
                targets: '.transaction-item',
                translateX: [-50, 0],
                opacity: [0, 1],
                delay: anime.stagger(100),
                duration: 500,
                easing: 'easeOutQuad'
            });
        }
        
        // Delete Transaction
        function deleteTransaction(id) {
            if (confirm('Hapus transaksi ini?')) {
                const transaction = transactions.find(t => t.id === id);
                if (transaction) {
                    // Reverse the transaction
                    balance -= transaction.amount;
                    transactions = transactions.filter(t => t.id !== id);
                    saveData();
                    updateBalance();
                    displayTransactions();
                }
            }
        }
        
        // Generate QR Code
        function generateQRCode() {
            document.getElementById('userId').textContent = userId;
            document.getElementById('qrcode').innerHTML = '';
            
            new QRCode(document.getElementById('qrcode'), {
                text: userId,
                width: 150,
                height: 150,
                colorDark: '#78C841',
                colorLight: '#ffffff',
            });
        }
        
        // Show Modal
        function showModal(modalId) {
            const modal = new bootstrap.Modal(document.getElementById(modalId));
            modal.show();
            
            // Animate modal entrance
            anime({
                targets: `#${modalId} .modal-content`,
                scale: [0.8, 1],
                opacity: [0, 1],
                duration: 300,
                easing: 'easeOutQuad'
            });
        }
        
        // Send Money Form
        document.getElementById('sendForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const recipient = document.getElementById('sendRecipient').value;
            const amount = parseFloat(document.getElementById('sendAmount').value);
            const note = document.getElementById('sendNote').value;
            
            if (amount > balance) {
                alert('Saldo tidak cukup!');
                return;
            }
            
            balance -= amount;
            addTransaction('Kirim Uang', -amount, note || 'Transfer', recipient);
            updateBalance();
            
            bootstrap.Modal.getInstance(document.getElementById('sendModal')).hide();
            this.reset();
            
            showNotification('Uang berhasil dikirim!', 'success');
        });
        
        // Request Money Form
        document.getElementById('requestForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const sender = document.getElementById('requestSender').value;
            const amount = parseFloat(document.getElementById('requestAmount').value);
            const note = document.getElementById('requestNote').value;
            
            addTransaction('Permintaan Uang', 0, `Meminta ${formatCurrency(amount)} dari ${sender}. ${note || ''}`, sender);
            
            bootstrap.Modal.getInstance(document.getElementById('requestModal')).hide();
            this.reset();
            
            showNotification('Permintaan uang terkirim!', 'info');
        });
        
        // Top Up Form
        document.getElementById('topupForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const amount = parseFloat(document.getElementById('topupAmount').value);
            const method = document.getElementById('topupMethod').value;
            
            balance += amount;
            addTransaction('Isi Saldo', amount, `Via ${method}`);
            updateBalance();
            
            bootstrap.Modal.getInstance(document.getElementById('topupModal')).hide();
            this.reset();
            
            showNotification('Saldo berhasil ditambahkan!', 'success');
        });
        
        // Pay Form
        document.getElementById('payForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const merchant = document.getElementById('payMerchant').value;
            const amount = parseFloat(document.getElementById('payAmount').value);
            const description = document.getElementById('payDescription').value;
            
            if (amount > balance) {
                alert('Saldo tidak cukup!');
                return;
            }
            
            balance -= amount;
            addTransaction('Pembayaran', -amount, description || 'Pembayaran', merchant);
            updateBalance();
            
            bootstrap.Modal.getInstance(document.getElementById('payModal')).hide();
            this.reset();
            
            showNotification('Pembayaran berhasil!', 'success');
        });
        
        // Process Scanned QR
        function processScannedQR() {
            const scannedId = document.getElementById('scannedId').value;
            const amount = parseFloat(document.getElementById('scanAmount').value);
            
            if (!scannedId || !amount) {
                alert('Lengkapi semua field!');
                return;
            }
            
            if (amount > balance) {
                alert('Saldo tidak cukup!');
                return;
            }
            
            balance -= amount;
            addTransaction('Scan QR', -amount, 'Transfer via QR', scannedId);
            updateBalance();
            
            bootstrap.Modal.getInstance(document.getElementById('scanModal')).hide();
            document.getElementById('scannedId').value = '';
            document.getElementById('scanAmount').value = '';
            
            showNotification('Transaksi QR berhasil!', 'success');
        }
        
        // Show Notification
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `alert alert-${type} position-fixed top-0 start-50 translate-middle-x mt-3`;
            notification.style.zIndex = '9999';
            notification.innerHTML = `
                <i class="fas fa-check-circle me-2"></i>${message}
            `;
            document.body.appendChild(notification);
            
            anime({
                targets: notification,
                translateY: [-50, 0],
                opacity: [0, 1],
                duration: 500,
                easing: 'easeOutQuad'
            });
            
            setTimeout(() => {
                anime({
                    targets: notification,
                    translateY: [0, -50],
                    opacity: [1, 0],
                    duration: 500,
                    easing: 'easeInQuad',
                    complete: () => notification.remove()
                });
            }, 3000);
        }
        
        // Animate Balance Card on Load
        window.addEventListener('load', function() {
            anime({
                targets: '.balance-card',
                scale: [0.9, 1],
                opacity: [0, 1],
                duration: 800,
                easing: 'easeOutElastic(1, .5)'
            });
            
            anime({
                targets: '.action-btn',
                scale: [0, 1],
                opacity: [0, 1],
                delay: anime.stagger(100, {start: 300}),
                duration: 600,
                easing: 'easeOutElastic(1, .5)'
            });
        });
        
        // Service Worker Registration
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                const swCode = `
                    self.addEventListener('install', (event) => {
                        console.log('Service Worker installed');
                    });
                    
                    self.addEventListener('fetch', (event) => {
                        event.respondWith(
                            caches.match(event.request).then((response) => {
                                return response || fetch(event.request);
                            })
                        );
                    });
                `;
                
                const blob = new Blob([swCode], { type: 'application/javascript' });
                const swUrl = URL.createObjectURL(blob);
                
                navigator.serviceWorker.register(swUrl)
                    .then(reg => console.log('Service Worker registered'))
                    .catch(err => console.log('Service Worker registration failed'));
            });
        }
        
        // Create Manifest
        const manifest = {
            name: 'DompetKu',
            short_name: 'DompetKu',
            description: 'Aplikasi dompet digital untuk mengelola keuangan Anda',
