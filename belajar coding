    </div>
    
    <!-- Modal Scan QR -->
    <div class="modal fade" id="scanModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Scan QR Code</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Masukkan ID dari QR Code</label>
                        <input type="text" class="form-control" id="scannedId" placeholder="Contoh: USER123">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Jumlah (Rp)</label>
                        <input type="number" class="form-control" id="scanAmount" min="1000">
                    </div>
                    <button onclick="processScannedQR()" class="btn btn-primary w-100">Proses Transaksi</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Modal Pay -->
    <div class="modal fade" id="payModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Pembayaran</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="payForm">
                        <div class="mb-3">
                            <label class="form-label">Merchant / Toko</label>
                            <input type="text" class="form-control" id="payMerchant" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Jumlah (Rp)</label>
                            <input type="number" class="form-control" id="payAmount" required min="1000">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Deskripsi</label>
                            <input type="text" class="form-control" id="payDescription">
